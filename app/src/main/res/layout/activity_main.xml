<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:HealthBarView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="org.ogasimli.healthbarview.MainActivity">

    <org.ogasimli.healthbarview.HealthBarView
        android:id="@+id/healthbarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        HealthBarView:hbv_animated="true"
        HealthBarView:hbv_value="95"/>

</LinearLayout>